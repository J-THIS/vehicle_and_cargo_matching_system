<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include layout="@layout/title_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/area_shape"
        android:layout_margin="10dp">
        <Button
            android:id="@+id/btn_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="点击选择筛选条件"
            android:textColor="@color/orange"
            android:textSize="17sp"
            android:background="@drawable/button_shape_selector4"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:scrollbars="none"
            android:layout_margin="10dp">
            <com.example.vehicle_and_cargo_matching_system.view.ResourceListView
                android:id="@+id/rlv_resource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </ScrollView>
    </LinearLayout>
</LinearLayout>